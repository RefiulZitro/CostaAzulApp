<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEB3B"
    tools:context=".MenuAdminActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="185dp"
        android:layout_height="175dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="123dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/administradorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="171dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="182dp"
        android:text="Administrador"
        android:textColor="#3F51B5"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.416"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/administradorImageView"
        android:layout_width="144dp"
        android:layout_height="124dp"
        android:layout_marginStart="133dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="134dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/administradorTextView"
        app:srcCompat="@drawable/user_admin" />

    <TextView
        android:id="@+id/administradornombreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="177dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="176dp"
        android:text="Isabel Sofia Becerra"
        android:textColor="#3F51B5"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/administradorImageView" />

    <ImageView
        android:id="@+id/nuevo_pedidoImageView"
        android:layout_width="132dp"
        android:layout_height="97dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/reporteImageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nuevo_pedidoTextView"
        app:srcCompat="@drawable/nuevo_pedido" />

    <TextView
        android:id="@+id/nuevo_pedidoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="Nuevo Pedido"
        android:textColor="#3F51B5"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/administradornombreTextView" />

    <TextView
        android:id="@+id/reportesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="68dp"
        android:text="Reportes"
        android:textColor="#3F51B5"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/administradornombreTextView" />

    <TextView
        android:id="@+id/facturasTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Facturas"
        android:textColor="#3F51B5"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/facturasImageView"
        app:layout_constraintEnd_toStartOf="@+id/empleadosTextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nuevo_pedidoImageView"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/empleadosTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:text="Empleados"
        android:textColor="#3F51B5"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/empleadosImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reporteImageView"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/reporteImageView"
        android:layout_width="126dp"
        android:layout_height="94dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reportesTextView"
        app:srcCompat="@drawable/reportes" />

    <ImageView
        android:id="@+id/facturasImageView"
        android:layout_width="134dp"
        android:layout_height="114dp"
        android:layout_marginStart="41dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/empleadosImageView"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/facturas_vista" />

    <ImageView
        android:id="@+id/empleadosImageView"
        android:layout_width="127dp"
        android:layout_height="109dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/admin_empleados" />
</androidx.constraintlayout.widget.ConstraintLayout>